<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yein.dutch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppThemeMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".JoinActivity"
            android:label="@string/join"
            android:theme="@style/AppThemeJoin"
            android:windowSoftInputMode="adjustUnspecified" />
        <activity
            android:name=".StateActivity"
            android:theme="@style/AppThemeState" />
        <activity
            android:name=".DebtActivity"
            android:label="빌린 돈"
            android:theme="@style/AppThemeList" />
        <activity
            android:name=".LoanActivity"
            android:label="빌려준 돈"
            android:theme="@style/AppThemeList" />
        <activity
            android:name=".DutchActivity"
            android:label="더치페이"
            android:theme="@style/AppThemeDutch"
            android:windowSoftInputMode="adjustUnspecified" />
        <activity
            android:name=".DutchCompleteActivity"
            android:theme="@style/AppThemeDutch"/>
    </application>

</manifest>